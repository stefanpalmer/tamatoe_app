<div class="row">

  <div class="col-md-4">

    <%= image_tag @entry.entry_img.url(:entry_show), class: "entry-show" %>

  </div>

  <div class="col-md-8"></div>
    <h2><%= @entry.date %></h2>
    <h3><%= @entry.foods %></h3>
    <h3>Feeling: <%= @entry.category.feeling %></h3>
    <h3><%= @entry.notes %></h3>
</div>


<%= link_to 'Back', root_path %>

<% if current_user? %>

  <% if @entry.user_id == current_user.id %>
    <%= link_to 'Edit', edit_entry_path(@entry) %>
    <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
